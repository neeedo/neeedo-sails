<div id="offerMarker">
  <h4 class="media-heading title">{{translations.offering}} {{tags}}</h4>
  <i>{{user.username}}</i>

  <p>
    {{translations.price}}: {{price}} &euro;
  </p>

  <p>
    <img src="{{image}}" alt="{{imagetitle}}" class="offerMarkerImage"/>
  </p>

  {{#if showDetailsLink}}
  <p>
    <a href="{{viewUrl}}" title="Details">{{translations.details}}</a>
  </p>
  {{/if}}
</div>

