<div class="col-xs-1">
  <a class="btn round-button " href="<%= UrlService.to('/register') %>"><span
      class="icon-user-plus round-button"></span><%= i18n('Register') %></a>
</div>
<% } %>
<% if (LoginService.userIsLoggedIn(req)) { %>
<div class="col-xs-2">
  <div class="col-xs-5">
    <a class=" btn round-button" href="<%= UrlService.to('/dashboard') %>"><span
        class="icon-user"></span><%= i18n('Favorites') %></a>
  </div>
  <div class="col-xs-5">
    <div id="test">
      <a class="btn round-button" href="<%= UrlService.to('/mailbox') %>"><span
          class="icon-envelop"></span><%= i18n('Mailbox') %> </a>
      <div class="newMsgCount"></div>
    </div>

  </div>
</div>

<% } %>



