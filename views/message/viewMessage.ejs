<div class="container">
  <div><a href="<%- MessageService.getMailboxUrl() %>"><%- i18n('Back to Mailbox')%></a><br />
    <h3><%- i18n('Your conversations with %s', (sender ? sender.getUsername() : '')) %></h3>
  </div>
  <div>
    <% messageList.getMessages().forEach(function (readMessage) { %>
      <%- partial('../partials/mailbox/message.ejs', {
        message: readMessage,
        isRead: true
      }) %>
    <% }); %>
  </div>
  <div>
    <%- partial('../partials/forms/message.ejs', {
        offer: undefined,
        title: "Reply",
        notLoggedInMessage: "Please login in order to reply",
        defaultMessage: "",
        recipientId: (sender ? sender.getId() : '')
      }
  ) %>
 </div>
</div>
