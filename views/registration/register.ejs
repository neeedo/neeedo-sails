<div class="container">
<h1><%= i18n('Registration') %></h1>
<div class="container slWraper shadow">
  <form method="POST" id="register" class="form">
    <div class="row">
      <div class="col-md-1">
        <label for="username"><%= i18n('Username') %></label>
      </div>
      <div class="col-md-4">
        <input class="glowing-border" type="text" name="username" required/>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <label for="email"><%= i18n('E-Mail') %></label>
      </div>
      <div class="col-md-4">
        <input class="glowing-border" type="email" name="email" required/>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
        <label for="password"><%= i18n('Password') %></label>
      </div>
      <div class="col-md-4">
        <input class="glowing-border" type="password" name="password" required/>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <input class="formBtn btn2" type="submit" value="<%= i18n('Register') %>" id="sendbtn" />
      </div>
    </div>
  </form>
</div>
  <h1><%= i18n('Login') %></h1>
<div class="container slWraper shadow">
  <form method="POST" id="loginForm"  class="form" action="<%= UrlService.to('/login') %>">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-1">
        <label for="email"><%= i18n('E-Mail') %></label>
      </div>
      <div class="col-xs-7">
        <input id="email" class="glowing-border" type="email" name="email" required/>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3 col-xs-offset-1">
        <label for="password"><%= i18n('Password') %></label>
      </div>
      <div class="col-xs-7">
        <input id="password" class="glowing-border" type="password" name="password" required/>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-7 col-xs-offset-4">
        <input class="formBtn btn2" type="submit" value="<%= i18n('Login') %>" id="sendbtn" />
      </div>
    </div>
  </form>
</div>
  </div>
